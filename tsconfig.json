{
    "compilerOptions": {
        "target": "ES5",
        "lib": ["es2021"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "composite": false,
        "removeComments": true,
        "downlevelIteration": true,
        "isolatedModules": false,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "sourceMap": false,
        "useUnknownInCatchVariables": false
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts", "src/**/*__test__"]
}
